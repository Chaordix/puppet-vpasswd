<%- if @my_password and @my_password_scheme != 'PLAIN' -%>
  <%- # check for alternative username -%>
  <%- if @my_settings['username'] -%>
    <%- username = @my_settings['username'] -%>
  <%- else -%>
    <%- username = @my_username -%>
  <%- end -%>
<%= username %>:<%= @my_password %>
<%- end -%>
